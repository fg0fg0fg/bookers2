<div>
  <div>
    <h1>User info</h1>
    <%= image_tag @user.get_profile_image(10,10) %>
  </div>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div>
    <% if @user == current_user %>
      <%= link_to "i", edit_user_path(@user.id) %>
    <% else %>
      <%= link_to "i", user_path(current_user.id) %>
    <% end %>
  </div>
  <h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
  <% end %>
</div>