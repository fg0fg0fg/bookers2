<div>
  <div>
    <h1>User info</h1>
    <%= image_tag @book.user.get_profile_image(100, 100) %>
  </div>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @book.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @book.user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div><%= link_to "i", edit_user_path(current_user.id) %></div>
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
  <% end %>
</div>
<div>
  <h2>Book detail</h2>
  <table>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user) do %>
            <p><%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @book.user.name %></p>
          <% end %>
        </td>
        <td>
          <%= link_to @book.title, book_path(@book.id) %>
        </td>
        <td><%= @book.body %></td>
        <td>
          <% if @book.user == current_user %>
            <%=link_to "Edit", edit_book_path(@book) %>
          <% end %>
        </td>
        <td>
          <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book), method: :delete %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>