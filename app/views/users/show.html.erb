<%= render 'books/list', books: @books %>

<h2>Books</h2>
<table>
  <thaed>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thaed>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
          <%= image_tag @user.get_profile_image(100,100) %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>