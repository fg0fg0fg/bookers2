<div class="container px-5 mt-3">
  <div class="row">
    <div class="col-3">
      <%= render 'books/list', books: @books %>
    </div>
    <div class="col-8 offset-1">
      <h2>Books</h2>
      <table class="table">
        <thaed>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thaed>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>